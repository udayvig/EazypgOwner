<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyPGActivity">


    <EditText
        android:id="@+id/noOfBathEditText"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/noOfRoomsEditText"
        android:ems="10"
        android:hint="Number of Bathrooms"
        android:inputType="number" />

    <EditText
        android:id="@+id/noOfRoomsEditText"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/staffNumberEditText"
        android:ems="10"
        android:hint="Number of Rooms"
        android:inputType="numberSigned" />

    <EditText
        android:id="@+id/staffNumberEditText"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/occupancyEditText"
        android:ems="10"
        android:hint="Staff Count"
        android:inputType="textPersonName|numberSigned" />

    <EditText
        android:id="@+id/occupancyEditText"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/genderEditText"
        android:ems="10"
        android:hint="Max Occupancy"
        android:inputType="textPersonName|numberSigned" />

    <EditText
        android:id="@+id/locationEditText"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/bioEditText"
        android:ems="10"
        android:hint="Location"
        android:inputType="textPostalAddress" />

    <EditText
        android:id="@+id/genderEditText"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lastEntryEditText"
        android:ems="10"
        android:hint="Gender"
        android:inputType="text" />

    <EditText
        android:id="@+id/lastEntryEditText"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/distLandEditText"
        android:ems="10"
        android:hint="Last Entry till ?"
        android:inputType="time" />


    <EditText
        android:id="@+id/distLandEditText"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/contactEditText"
        android:ems="10"
        android:hint="Distance from landmark"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/ownerNameEditText"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/locationEditText"
        android:ems="10"
        android:hint="Owner Name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/contactEditText"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ownerNameEditText"
        android:ems="10"
        android:hint="PG contact "
        android:inputType="phone" />

    <EditText
        android:id="@+id/pgNameEditText"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:hint="Pg Name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/bioEditText"
        android:layout_width="325dp"
        android:layout_height="68dp"
        android:layout_below="@+id/pgNameEditText"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="BIO"
        android:inputType="textMultiLine" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/noOfBathEditText"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="21dp"
        app:backgroundTint="@color/colorPrimary" />

</RelativeLayout>