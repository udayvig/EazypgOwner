<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            tools:context="com.example.EazyPG.owner.Activities.MyPGActivity">

            <TextView
                android:id="@+id/pgName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/productsans"
                android:text="PG Name "
                android:textColor="#000000"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/pgNameTextView"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:inputType="textPersonName"
                android:layout_marginStart="8dp"
                android:layout_marginTop="32dp"
                android:layout_toEndOf="@id/pgName"
                android:background="@drawable/roundedcorners"
                android:fontFamily="@font/productsans"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.964"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/bio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pgName"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/productsans"
                android:text="Bio"
                android:textColor="#000000"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/landmarkTextView" />

            <TextView
                android:id="@+id/bioTextView"
                android:layout_width="170dp"
                android:inputType="textMultiLine"
                android:layout_height="wrap_content"
                android:layout_below="@id/pgNameTextView"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@id/bio"
                android:background="@drawable/roundedcorners"
                android:fontFamily="@font/productsans"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.964"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/landmarkTextView" />

            <TextView
                android:id="@+id/gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/bio"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/productsans"
                android:text="Gender  "
                android:textColor="#000000"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/maxOccupancyTextView" />

            <TextView
                android:id="@+id/genderTextView"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/bioTextView"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:inputType="text"
                android:maxLength="7"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@id/gender"
                android:background="@drawable/roundedcorners"
                android:fontFamily="@font/productsans"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.964"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/maxOccupancyTextView" />

            <TextView
                android:id="@+id/landmark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/gender"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/productsans"
                android:text="Landmark  "
                android:textColor="#000000"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/locationTextView" />

            <TextView
                android:id="@+id/landmarkTextView"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/genderTextView"
                android:layout_marginEnd="8dp"
                android:inputType="textMultiLine"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@id/landmark"
                android:background="@drawable/roundedcorners"
                android:fontFamily="@font/productsans"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.964"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/locationTextView" />

            <TextView
                android:id="@+id/lastEntryTime"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_below="@id/landmark"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/productsans"
                android:text="Last Entry time "
                android:textColor="#000000"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/noOfRoomTextView" />

            <TextView
                android:id="@+id/lastEntryTimeTextView"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/landmarkTextView"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@id/lastEntryTime"
                android:background="@drawable/roundedcorners"
                android:fontFamily="@font/productsans"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20dp"
                android:inputType="text"
                android:maxLength="10"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.964"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/noOfRoomTextView" />

            <TextView
                android:id="@+id/location"
                android:layout_width="81dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/lastEntryTime"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/productsans"
                android:text="Location  "
                android:textColor="#000000"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pgContactTextView" />

            <TextView
                android:id="@+id/locationTextView"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/lastEntryTimeTextView"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@id/location"
                android:inputType="textMultiLine"
                android:background="@drawable/roundedcorners"
                android:fontFamily="@font/productsans"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.964"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pgContactTextView" />

            <TextView
                android:id="@+id/maxOccupancy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/location"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/productsans"
                android:text="Max Occupancy  "
                android:textColor="#000000"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bioTextView" />

            <TextView
                android:id="@+id/maxOccupancyTextView"
                android:layout_width="170dp"
                android:inputType="number"
                android:layout_height="wrap_content"
                android:maxLength="3"
                android:layout_below="@id/locationTextView"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@id/maxOccupancy"
                android:background="@drawable/roundedcorners"
                android:fontFamily="@font/productsans"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.964"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bioTextView" />

            <TextView
                android:id="@+id/noOfBathroom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/maxOccupancy"
                android:layout_marginStart="16dp"
                android:layout_marginTop="14dp"
                android:fontFamily="@font/productsans"
                android:text="Bathroom Count"
                android:textColor="#000000"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/staffCountTextView" />

            <TextView
                android:id="@+id/noOfBathroomTextView"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/maxOccupancy"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@id/noOfBathroom"
                android:background="@drawable/roundedcorners"
                android:fontFamily="@font/productsans"
                android:textAlignment="center"
                android:textColor="#000000"
                android:inputType="number"
                android:maxLength="2"
                android:textSize="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.964"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/staffCountTextView"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/noOfRoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/noOfBathroom"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/productsans"
                android:text="No of rooms  "
                android:textColor="#000000"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/genderTextView" />

            <TextView
                android:id="@+id/noOfRoomTextView"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/noOfBathroom"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@id/noOfRoom"
                android:background="@drawable/roundedcorners"
                android:fontFamily="@font/productsans"
                android:textAlignment="center"
                android:textColor="#000000"
                android:inputType="number"
                android:maxLength="4"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.964"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/genderTextView" />

            <TextView
                android:id="@+id/ownerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/noOfRoom"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/productsans"
                android:text="Owner Name  "
                android:textColor="#000000"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pgNameTextView" />

            <TextView
                android:id="@+id/ownerNameTextView"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/noOfRoom"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@id/ownerName"
                android:background="@drawable/roundedcorners"
                android:fontFamily="@font/productsans"
                android:inputType="textPersonName"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.964"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pgNameTextView" />

            <TextView
                android:id="@+id/pgContact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ownerName"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/productsans"
                android:text="Contact "
                android:textColor="#000000"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ownerNameTextView" />

            <TextView
                android:id="@+id/pgContactTextView"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/ownerName"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@id/pgContact"
                android:background="@drawable/roundedcorners"
                android:fontFamily="@font/productsans"
                android:maxLength="10"
                android:textAlignment="center"
                android:inputType="number"
                android:textColor="#000000"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.964"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ownerNameTextView" />

            <TextView
                android:id="@+id/staffCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pgContact"
                android:layout_marginStart="16dp"
                android:layout_marginTop="14dp"
                android:fontFamily="@font/productsans"
                android:inputType="text"
                android:text="Staff Count  "
                android:textColor="#000000"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lastEntryTimeTextView" />

            <TextView
                android:id="@+id/staffCountTextView"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/pgContactTextView"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                android:layout_toEndOf="@id/staffCount"
                android:background="@drawable/roundedcorners"
                android:fontFamily="@font/productsans"
                android:textAlignment="center"
                android:textColor="#000000"
                android:inputType="number"
                android:maxLength="2"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.964"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lastEntryTimeTextView" />


            <TextView
                android:id="@+id/applianceTextView"
                android:layout_width="128dp"
                android:layout_height="33dp"
                android:layout_alignEnd="@+id/landmark"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="152dp"
                android:layout_marginStart="1dp"
                android:layout_marginTop="8dp"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/productsansbold"
                android:foreground="?android:attr/selectableItemBackground"
                android:text="APPLIANCES"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.082"
                app:layout_constraintStart_toEndOf="@+id/applianceFlash"
                app:layout_constraintTop_toBottomOf="@+id/noOfBathroomTextView"
                app:layout_constraintVertical_bias="1.0" />

            <ImageView
                android:id="@+id/applianceFlash"
                android:layout_width="22dp"
                android:layout_height="44dp"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/noOfBathroomTextView"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/scissors" />


        </android.support.constraint.ConstraintLayout>
    </ScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/saveButton"
        android:layout_width="54dp"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="152dp"
        android:elevation="10dp"
        android:src="@drawable/tick"
        android:clickable="true"
        android:focusable="true"
        app:backgroundTint="#64DD17"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.96"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.99" />
</android.support.constraint.ConstraintLayout>