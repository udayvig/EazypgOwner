<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signupwalli"
    tools:context="com.example.EazyPG.owner.Activities.SignupActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="110dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/productsansbold"
        android:text="Sign up"
        android:textColor="#000000"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayout8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="8dp"
        android:clipChildren="false"
        app:hintTextAppearance="@style/TextLabelnew"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3">

        <EditText
            android:id="@+id/usernameEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="bottom"
            android:background="@drawable/roundedcorners"
            android:ems="10"
            android:fontFamily="@font/productsans"
            android:hint="Name"
            android:inputType="textPersonName"
            android:textSize="17sp"
            android:paddingStart="16dp"
            android:textColor="#000000"
            android:textColorHint="#424242"
            android:translationY="1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayout10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="20dp"
        android:clipChildren="false"
        app:hintTextAppearance="@style/TextLabelnew"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout8">

        <EditText
            android:id="@+id/emailEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/roundedcorners"
            android:ems="10"
            android:fontFamily="@font/productsans"
            android:hint="Email Address"
            android:inputType="textEmailAddress"
            android:paddingStart="16dp"
            android:textColor="#000000"
            android:textColorHint="#424242"
            android:textSize="17sp"
            android:translationY="1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/usernameEditText" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayout12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="20dp"
        android:clipChildren="false"
        app:hintTextAppearance="@style/TextLabelnew"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout11">

        <EditText
            android:id="@+id/localityEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/emailEditText"
            android:layout_alignStart="@+id/emailEditText"
            android:layout_below="@+id/emailEditText"
            android:background="@drawable/roundedcorners"
            android:ems="10"
            android:fontFamily="@font/productsans"
            android:hint="Locality"
            android:inputType="textMultiLine"
            android:paddingStart="16dp"
            android:textColor="#000000"
            android:textColorHint="#424242"
            android:textSize="17sp"
            android:translationY="1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/emailEditText" />

    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayout11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="20dp"
        android:clipChildren="false"
        app:hintTextAppearance="@style/TextLabelnew"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout10">

        <EditText
            android:id="@+id/contactEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/localityEditText"
            android:layout_alignStart="@+id/localityEditText"
            android:layout_below="@+id/localityEditText"
            android:background="@drawable/roundedcorners"
            android:ems="10"
            android:fontFamily="@font/productsans"
            android:hint="Contact"
            android:inputType="phone"
            android:maxLength="10"
            android:paddingStart="16dp"
            android:textColor="#000000"
            android:textSize="17sp"
            android:textColorHint="#424242"
            android:translationY="1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/localityEditText" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btnSignUp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#ffffff"
        android:clickable="true"
        android:elevation="50dp"
        android:focusable="true"
        android:src="@drawable/enabled"
        app:backgroundTint="#00FFFFFF"
        app:backgroundTintMode="add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.965"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.85" />

    <ImageView
        android:id="@+id/nameIcon"
        android:layout_width="51dp"
        android:layout_height="27dp"
        android:layout_marginEnd="7dp"
        android:layout_marginTop="23dp"
        app:layout_constraintEnd_toStartOf="@+id/textInputLayout8"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:srcCompat="@drawable/nameblack" />

    <ImageView
        android:id="@+id/emailIcon"
        android:layout_width="35dp"
        android:layout_height="20dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="39dp"
        app:layout_constraintEnd_toStartOf="@+id/textInputLayout10"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout8"
        app:srcCompat="@drawable/emailblack" />

    <ImageView
        android:id="@+id/localityIcon"
        android:layout_width="35dp"
        android:layout_height="26dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toStartOf="@+id/textInputLayout12"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout11"
        app:srcCompat="@drawable/localityblack" />

    <ImageView
        android:id="@+id/contactIcon"
        android:layout_width="33dp"
        android:layout_height="25dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="38dp"
        app:layout_constraintEnd_toStartOf="@+id/textInputLayout11"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout10"
        app:srcCompat="@drawable/contactblack" />

    <TextView
        android:id="@+id/signupToLoginTextView"
        android:layout_width="310dp"
        android:layout_height="41dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/productsans"
        android:text="Already Registered? Login"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="17dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>
