<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePageActivity">

    <com.imangazaliev.circlemenu.CircleMenu
        android:id="@+id/circleMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <com.imangazaliev.circlemenu.CircleMenuButton
            android:id="@+id/cashflowView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:colorNormal="#2196F3"
            app:colorPressed="#1E88E5"
            android:tooltipText="hello"
            app:icon="@drawable/head" />

        <com.imangazaliev.circlemenu.CircleMenuButton
            android:id="@+id/complainView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:colorNormal="#4CAF50"
            app:colorPressed="#43A047"
            app:icon="@drawable/head" />

        <com.imangazaliev.circlemenu.CircleMenuButton
            android:id="@+id/staffView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:colorNormal="#F44336"
            app:colorPressed="#E53935"
            app:icon="@drawable/head" />

       <com.imangazaliev.circlemenu.CircleMenuButton
            android:id="@+id/pgView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:colorNormal="@color/colorPrimaryDark"
            app:colorPressed="@color/colorPrimary"
            app:icon="@drawable/head" />

        <com.imangazaliev.circlemenu.CircleMenuButton
            android:id="@+id/subscriptionView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:colorNormal="@color/colorPrimaryDark"
            app:colorPressed="@color/colorPrimary"
            app:icon="@drawable/head" />

        <com.imangazaliev.circlemenu.CircleMenuButton
            android:id="@+id/tenantView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#ffff06"
            android:elevation="0dp"
            app:colorNormal="@color/colorPrimaryDark"
            app:colorPressed="@color/colorPrimary"
            app:icon="@drawable/head" />

    </com.imangazaliev.circlemenu.CircleMenu>

</android.support.constraint.ConstraintLayout>
