<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    android:layout_margin="10dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardElevation="10dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/firstTextView"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/quicksandbold"
            android:text="First"
            android:textAllCaps="true"
            android:textColor="@color/DarkGreen"
            android:textSize="22sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/secondTextView"
            android:layout_width="93dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/solidcorners"
            android:fontFamily="@font/productsans"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:text="Second"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/imageView5"
            app:layout_constraintTop_toBottomOf="@+id/firstTextView" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/thirdTextView">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/billButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:background="#000000"
                android:src = "@drawable/ic_library_books_black_24dp"
                android:clickable="true"
                android:text="Bill"
                app:backgroundTint="#000000"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="173dp" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fineButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="4dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="4dp"
                android:src="@drawable/fine"
                android:background="#000000"
                android:backgroundTint="#000000"
                android:clickable="true"
                android:text="Fine" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/deleteTenant"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="4dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="4dp"
                android:background="#000000"
                android:src="@drawable/ic_delete_black_24dp"
                android:backgroundTint="#000000"
                android:clickable="true"
                android:text="Avict"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/paymentButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="4dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="4dp"
                android:background="#000000"
                android:src="@drawable/wallet"
                android:clickable="true"
                app:backgroundTint="#000000"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/callButton"
                app:layout_constraintStart_toEndOf="@+id/thirdTextView"
                />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/callButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="4dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="4dp"
                android:background="#000000"
                android:clickable="true"
                app:backgroundTint="#000000"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/ic_call_black_24dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/thirdTextView"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/solidcorners"
            android:fontFamily="@font/productsans"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:text="Third"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/secondTextView"
            app:layout_constraintVertical_bias="0.0" />


        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/comfortabold"
            android:text="Room"
            android:textColor="#000000"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/firstTextView" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="2dp"
            app:layout_constraintStart_toEndOf="@+id/textView8"
            app:layout_constraintTop_toBottomOf="@+id/firstTextView"
            app:srcCompat="@drawable/enabled" />


    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>