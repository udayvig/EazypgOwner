<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Fullscreen application theme. -->
    <style name="FullscreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name = "actionBarVisible" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#5FB548</item>
    </style>

    <style name="TextLabel2" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">14dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textColor">#029002</item>
        <item name="android:layout_gravity">top</item>
    </style>

    <style name="TextLabelnew" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">#005738</item>
    </style>

    <style name="SwitchCompatTheme" >
        <item name="colorControlActivated">#4CAF50</item>
    </style>

    <style name="TextLabel3" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/DarkGreen</item>
    </style>

    <style name="RatingBar" parent="android:style/Widget.Material.RatingBar.Small">
        <item name="colorControlNormal">#9E9E9E</item>
        <item name="colorControlActivated">#FFC107</item>
    </style>

    <style name="TextLabel4" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">#0277BD</item>
    </style>
</resources>

